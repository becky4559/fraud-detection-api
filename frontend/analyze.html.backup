<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Analyze | LogSense</title>
    <!-- Font: Times New Roman -->
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Times+New+Roman&display=swap');
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #6366f1;
            --dark-bg: #0f172a;
            --card-bg: #1e293b;
            --text-primary: #f1f5f9;
            --text-secondary: #94a3b8;
            --danger: #ef4444;
            --warning: #f59e0b;
            --success: #10b981;
        }
        
        /* Apply Times New Roman to all text */
        * {
            font-family: 'Times New Roman', Times, serif !important;
        }
        
        body {
            font-family: 'Times New Roman', Times, serif;
            background: var(--dark-bg);
            color: var(--text-primary);
            min-height: 100vh;
            padding: 20px;
        }
        
        .container {
            max-width: 800px;
            margin: 0 auto;
        }
        
        .back-btn {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            color: var(--text-secondary);
            text-decoration: none;
            padding: 10px 20px;
            background: rgba(30, 41, 59, 0.5);
            border-radius: 8px;
            margin-bottom: 30px;
            transition: all 0.3s;
        }
        
        .back-btn:hover {
            color: var(--primary);
            background: rgba(99, 102, 241, 0.1);
            transform: translateX(-5px);
        }
        
        .analyze-card {
            background: var(--card-bg);
            border-radius: 16px;
            padding: 40px;
            border: 1px solid #334155;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
            margin-bottom: 30px;
        }
        
        .card-header {
            text-align: center;
            margin-bottom: 40px;
        }
        
        .card-icon {
            font-size: 3rem;
            color: var(--primary);
            margin-bottom: 20px;
        }
        
        .card-title {
            font-size: 2rem;
            margin-bottom: 10px;
        }
        
        .card-subtitle {
            color: var(--text-secondary);
            font-size: 1rem;
        }
        
        .form-group {
            margin-bottom: 25px;
        }
        
        label {
            display: block;
            color: var(--text-secondary);
            margin-bottom: 8px;
            font-size: 0.9rem;
            font-weight: 500;
        }
        
        .input-with-icon {
            position: relative;
        }
        
        .input-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-secondary);
        }
        
        input, select {
            width: 100%;
            padding: 15px 15px 15px 45px;
            background: rgba(15, 23, 42, 0.8);
            border: 2px solid #334155;
            border-radius: 10px;
            color: var(--text-primary);
            font-size: 1rem;
            transition: all 0.3s;
        }
        
        input:focus, select:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.2);
        }
        
        .btn-analyze {
            width: 100%;
            padding: 16px;
            background: linear-gradient(135deg, var(--primary) 0%, #4f46e5 100%);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            margin-top: 10px;
        }
        
        .btn-analyze:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(99, 102, 241, 0.4);
        }
        
        .alert {
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
            display: none;
        }
        
        .alert-danger {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.3);
            color: #fca5a5;
        }
        
        .alert-success {
            background: rgba(16, 185, 129, 0.1);
            border: 1px solid rgba(16, 185, 129, 0.3);
            color: #86efac;
        }
        
        .loading {
            text-align: center;
            padding: 40px;
            display: none;
        }
        
        .spinner {
            width: 50px;
            height: 50px;
            border: 3px solid #334155;
            border-top-color: var(--primary);
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 auto 20px;
        }
        
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
        
        .result-card {
            margin-top: 30px;
            background: rgba(30, 41, 59, 0.8);
            border-radius: 12px;
            padding: 30px;
            border: 1px solid #334155;
            display: none;
        }
        
        .result-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
        }
        
        .risk-level {
            padding: 8px 20px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        
        .risk-high {
            background: rgba(239, 68, 68, 0.2);
            color: var(--danger);
            border: 1px solid var(--danger);
        }
        
        .risk-medium {
            background: rgba(245, 158, 11, 0.2);
            color: var(--warning);
            border: 1px solid var(--warning);
        }
        
        .risk-low {
            background: rgba(16, 185, 129, 0.2);
            color: var(--success);
            border: 1px solid var(--success);
        }
        
        .probability-meter {
            margin: 25px 0;
        }
        
        .probability-label {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
            font-size: 0.9rem;
            color: var(--text-secondary);
        }
        
        .probability-bar {
            height: 12px;
            background: #334155;
            border-radius: 6px;
            overflow: hidden;
        }
        
        .probability-fill {
            height: 100%;
            border-radius: 6px;
            transition: width 1s ease;
        }
        
        .fill-high { background: linear-gradient(90deg, var(--danger), #f87171); }
        .fill-medium { background: linear-gradient(90deg, var(--warning), #fbbf24); }
        .fill-low { background: linear-gradient(90deg, var(--success), #34d399); }
        
        .recommendation {
            background: rgba(30, 41, 59, 0.9);
            border-radius: 10px;
            padding: 20px;
            margin-top: 25px;
            border-left: 4px solid var(--primary);
        }
        
        .recommendation h5 {
            color: var(--primary);
            margin-bottom: 10px;
            font-size: 1rem;
        }
        
        .recommendation p {
            color: var(--text-secondary);
            line-height: 1.5;
        }
        
        .action-buttons {
            display: flex;
            gap: 15px;
            margin-top: 25px;
        }
        
        .btn-action {
            flex: 1;
            padding: 12px;
            border-radius: 8px;
            border: none;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s;
        }
        
        .btn-danger {
            background: rgba(239, 68, 68, 0.2);
            color: var(--danger);
            border: 1px solid rgba(239, 68, 68, 0.3);
        }
        
        .btn-warning {
            background: rgba(245, 158, 11, 0.2);
            color: var(--warning);
            border: 1px solid rgba(245, 158, 11, 0.3);
        }
        
        .btn-success {
            background: rgba(16, 185, 129, 0.2);
            color: var(--success);
            border: 1px solid rgba(16, 185, 129, 0.3);
        }
        
        .btn-action:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }
        
        .history-card {
            margin-top: 30px;
            background: var(--card-bg);
            border-radius: 16px;
            padding: 25px;
            border: 1px solid #334155;
        }
        
        .history-title {
            font-size: 1.2rem;
            margin-bottom: 20px;
            color: var(--text-primary);
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .history-item {
            padding: 15px;
            margin: 10px 0;
            background: rgba(15, 23, 42, 0.5);
            border-radius: 10px;
            border-left: 4px solid var(--primary);
        }
        
        .history-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 8px;
        }
        
        .history-amount {
            font-weight: 600;
            font-size: 1.1rem;
        }
        
        .history-risk {
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 500;
        }
        
        .history-details {
            color: var(--text-secondary);
            font-size: 0.9rem;
            margin-bottom: 5px;
        }
        
        .history-time {
            color: var(--text-secondary);
            font-size: 0.8rem;
        }
        
        .form-check {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 20px;
        }
        
        .form-check-input {
            width: 18px;
            height: 18px;
        }
        
        .form-check-label {
            color: var(--text-secondary);
            font-size: 0.9rem;
        }
        
        .fraud-types-info {
            background: rgba(99, 102, 241, 0.1);
            border: 1px solid rgba(99, 102, 241, 0.3);
            border-radius: 10px;
            padding: 15px;
            margin-top: 20px;
            font-size: 0.9rem;
            color: var(--text-secondary);
        }
        
        .fraud-types-info i {
            color: var(--primary);
            margin-right: 8px;
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="dashboard.html" class="back-btn">
            <i class="fas fa-arrow-left"></i>
            Back to Dashboard
        </a>
        
        <div class="analyze-card">
            <div class="card-header">
                <div class="card-icon">
                    <i class="fas fa-search-dollar"></i>
                </div>
                <h1 class="card-title">Analyze</h1>
                <p class="card-subtitle">Detecting 8 types of fraud in financial transactions</p>
            </div>
            
            <div id="alert" class="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                <span id="alertMessage"></span>
            </div>
            
            <form id="analyzeForm">
                <div class="form-group">
                    <label for="amount">Transaction Amount (KES)</label>
                    <div class="input-with-icon">
                        <i class="fas fa-dollar-sign input-icon"></i>
                        <input type="number" id="amount" placeholder="e.g., 15000" required min="0.01" step="0.01">
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="userId">User ID (Optional)</label>
                    <div class="input-with-icon">
                        <i class="fas fa-user input-icon"></i>
                        <input type="text" id="userId" placeholder="e.g., user_254712345678">
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="transactionType">Transaction Type</label>
                    <div class="input-with-icon">
                        <i class="fas fa-exchange-alt input-icon"></i>
                        <select id="transactionType">
                            <option value="transfer">Money Transfer</option>
                            <option value="payment">Payment</option>
                            <option value="withdrawal">Withdrawal</option>
                            <option value="deposit">Deposit</option>
                            <option value="purchase">Purchase</option>
                        </select>
                    </div>
                </div>
                
                <div class="form-check">
                    <input type="checkbox" id="sendAlert" class="form-check-input" checked>
                    <label for="sendAlert" class="form-check-label">
                        <i class="fas fa-bell me-2"></i>Send email alert if fraud detected
                    </label>
                </div>
                
                <button type="submit" class="btn-analyze" id="analyzeBtn">
                    <i class="fas fa-search me-2"></i>Analyze Transaction
                </button>
                
                <div class="fraud-types-info">
                    <i class="fas fa-info-circle"></i>
                    Analyzing against 8 fraud types: SIM Swap, Agent Collusion, Social Engineering, Identity Theft, Mobile Money Fraud, Repayment Fraud, Synthetic Identity, Device Cloning
                </div>
            </form>
            
            <div class="loading" id="loading">
                <div class="spinner"></div>
                <p>Analyzing against 8 fraud detection models...</p>
            </div>
            
            <div class="result-card" id="resultCard">
                <div class="result-header">
                    <h3 style="margin: 0;">Analysis Result</h3>
                    <span class="risk-level" id="riskLevel">HIGH</span>
                </div>
                
                <div>
                    <p><strong>Amount:</strong> KES <span id="resultAmount">0</span></p>
                    <p><strong>User:</strong> <span id="resultUserId">anonymous</span></p>
                    <p><strong>Type:</strong> <span id="resultType">transfer</span></p>
                    <p><strong>Fraud Probability:</strong> <span id="probabilityText">0%</span></p>
                    
                    <div class="probability-meter">
                        <div class="probability-label">
                            <span>Low Risk</span>
                            <span id="probabilityValue">0%</span>
                            <span>High Risk</span>
                        </div>
                        <div class="probability-bar">
                            <div class="probability-fill" id="probabilityFill" style="width: 0%"></div>
                        </div>
                    </div>
                    
                    <div class="recommendation">
                        <h5><i class="fas fa-lightbulb me-2"></i>Recommendation</h5>
                        <p id="recommendationText">Processing recommendation...</p>
                    </div>
                    
                    <div class="action-buttons" id="actionButtons">
                        <!-- Buttons will be added here -->
                    </div>
                </div>
            </div>
        </div>
        
        <div class="history-card">
            <h3 class="history-title">
                <i class="fas fa-history"></i>Recent Analyses
            </h3>
            <div id="historyList">
                <!-- History will be loaded here -->
            </div>
        </div>
    </div>

    <script>
        const API_URL = 'https://fraud-detection-api-b6dk.onrender.com';
        const USER_EMAIL = 'rebeccabosibori589@gmail.com';
        
        // Check for URL parameters
        const urlParams = new URLSearchParams(window.location.search);
        const presetAmount = urlParams.get('amount');
        
        if (presetAmount) {
            document.getElementById('amount').value = presetAmount;
        }
        
        // Load analysis history
        loadAnalysisHistory();
        
        // Form submission
        document.getElementById('analyzeForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const amount = parseFloat(document.getElementById('amount').value);
            const userId = document.getElementById('userId').value || 'anonymous';
            const transactionType = document.getElementById('transactionType').value;
            const sendAlert = document.getElementById('sendAlert').checked;
            
            // Validate
            if (!amount || amount <= 0) {
                showAlert('Please enter a valid amount greater than 0.', 'danger');
                return;
            }
            
            // Show loading
            showLoading(true);
            
            try {
                // Call API
                const response = await fetch(`${API_URL}/predict?amount=${amount}&user_id=${userId}`);
                
                if (!response.ok) {
                    throw new Error(`API error: ${response.status}`);
                }
                
                const result = await response.json();
                
                // Display results
                displayResults(result, amount, userId, transactionType);
                
                // Save to history
                saveToHistory(amount, userId, transactionType, result);
                
                // Send email alert if needed
                if (sendAlert && result.risk_level === 'HIGH') {
                    sendEmailAlert(amount, userId, result);
                }
                
            } catch (error) {
                console.error('Analysis error:', error);
                showAlert('Failed to analyze transaction. Please try again.', 'danger');
            }
            
            showLoading(false);
        });
        
        function displayResults(result, amount, userId, transactionType) {
            // Update basic info
            document.getElementById('resultAmount').textContent = amount.toLocaleString();
            document.getElementById('resultUserId').textContent = userId;
            document.getElementById('resultType').textContent = transactionType;
            
            // Calculate probability
            const probability = result.fraud_probability * 100;
            document.getElementById('probabilityText').textContent = `${probability.toFixed(1)}%`;
            document.getElementById('probabilityValue').textContent = `${probability.toFixed(1)}%`;
            
            // Set risk level
            const riskLevel = document.getElementById('riskLevel');
            let riskClass, fillClass, recommendation, actions;
            
            if (probability >= 70) {
                riskClass = 'risk-high';
                fillClass = 'fill-high';
                riskLevel.textContent = 'HIGH RISK';
                recommendation = 'Ì∫® HIGH FRAUD RISK DETECTED! This transaction exhibits multiple fraud indicators. Immediate action required.';
                actions = `
                    <button class="btn-action btn-danger" onclick="blockTransaction()">
                        <i class="fas fa-ban me-1"></i>Block Transaction
                    </button>
                    <button class="btn-action btn-warning" onclick="flagForReview()">
                        <i class="fas fa-flag me-1"></i>Flag for Review
                    </button>
                `;
            } else if (probability >= 40) {
                riskClass = 'risk-medium';
                fillClass = 'fill-medium';
                riskLevel.textContent = 'MEDIUM RISK';
                recommendation = '‚ö†Ô∏è MODERATE FRAUD RISK DETECTED. Additional verification recommended before proceeding.';
                actions = `
                    <button class="btn-action btn-warning" onclick="requestVerification()">
                        <i class="fas fa-user-check me-1"></i>Request Verification
                    </button>
                    <button class="btn-action" onclick="proceedWithCaution()" style="background: rgba(59, 130, 246, 0.2); color: #3b82f6; border: 1px solid rgba(59, 130, 246, 0.3);">
                        <i class="fas fa-check me-1"></i>Proceed with Caution
                    </button>
                `;
            } else {
                riskClass = 'risk-low';
                fillClass = 'fill-low';
                riskLevel.textContent = 'LOW RISK';
                recommendation = '‚úÖ LOW FRAUD RISK. Transaction appears legitimate. You may proceed.';
                actions = `
                    <button class="btn-action btn-success" onclick="approveTransaction()">
                        <i class="fas fa-check-circle me-1"></i>Approve Transaction
                    </button>
                    <button class="btn-action" onclick="monitorTransaction()" style="background: rgba(148, 163, 184, 0.2); color: #94a3b8; border: 1px solid rgba(148, 163, 184, 0.3);">
                        <i class="fas fa-eye me-1"></i>Monitor Only
                    </button>
                `;
            }
            
            // Apply styles
            riskLevel.className = `risk-level ${riskClass}`;
            const fill = document.getElementById('probabilityFill');
            fill.className = `probability-fill ${fillClass}`;
            setTimeout(() => {
                fill.style.width = `${probability}%`;
            }, 100);
            
            // Update content
            document.getElementById('recommendationText').textContent = recommendation;
            document.getElementById('actionButtons').innerHTML = actions;
            
            // Show result card
            document.getElementById('resultCard').style.display = 'block';
        }
        
        function sendEmailAlert(amount, userId, result) {
            const subject = `Fraud Alert: KES ${amount} - ${result.risk_level} Risk`;
            const message = `High-risk transaction detected. Check dashboard for details.`;
            
            // In a real app, you would send an email
            console.log(`Email would be sent to ${USER_EMAIL}:`, { subject, message });
            
            showAlert(`Alert sent to ${USER_EMAIL}`, 'success');
        }
        
        function saveToHistory(amount, userId, type, result) {
            let history = JSON.parse(localStorage.getItem('analysisHistory') || '[]');
            
            history.unshift({
                amount,
                userId,
                type,
                risk: result.risk_level,
                probability: result.fraud_probability,
                fraudType: result.fraud_type,
                timestamp: new Date().toISOString()
            });
            
            // Keep only last 10 items
            if (history.length > 10) history.pop();
            
            localStorage.setItem('analysisHistory', JSON.stringify(history));
            loadAnalysisHistory();
        }
        
        function loadAnalysisHistory() {
            const history = JSON.parse(localStorage.getItem('analysisHistory') || '[]');
            const container = document.getElementById('historyList');
            
            if (history.length === 0) {
                container.innerHTML = `
                    <div style="text-align: center; padding: 40px 20px; color: #64748b;">
                        <i class="fas fa-history fa-2x mb-3"></i>
                        <p>No analysis history yet</p>
                        <p class="small">Analyze a transaction to see it here</p>
                    </div>
                `;
                return;
            }
            
            container.innerHTML = history.map(item => `
                <div class="history-item">
                    <div class="history-header">
                        <div class="history-amount">KES ${item.amount.toLocaleString()}</div>
                        <span class="history-risk ${item.risk === 'HIGH' ? 'risk-high' : item.risk === 'MEDIUM' ? 'risk-medium' : 'risk-low'}">
                            ${item.risk}
                        </span>
                    </div>
                    <div class="history-details">
                        ${item.userId} ‚Ä¢ ${item.type} ‚Ä¢ ${(item.probability * 100).toFixed(1)}% risk
                        <br><small>Fraud Type: ${item.fraudType.replace(/_/g, ' ')}</small>
                    </div>
                    <div class="history-time">
                        ${new Date(item.timestamp).toLocaleString()}
                    </div>
                </div>
            `).join('');
        }
        
        // Action functions
        function blockTransaction() {
            alert('Transaction blocked successfully!');
            showAlert('Transaction blocked', 'success');
        }
        
        function flagForReview() {
            alert('Transaction flagged for manual review.');
            showAlert('Flagged for review', 'warning');
        }
        
        function requestVerification() {
            alert('Verification request sent to user.');
            showAlert('Verification requested', 'info');
        }
        
        function proceedWithCaution() {
            alert('Proceeding with transaction. Monitoring enabled.');
            showAlert('Proceeding with caution', 'info');
        }
        
        function approveTransaction() {
            alert('Transaction approved successfully!');
            showAlert('Transaction approved', 'success');
        }
        
        function monitorTransaction() {
            alert('Transaction added to monitoring list.');
            showAlert('Added to monitoring', 'info');
        }
        
        // UI helpers
        function showAlert(message, type) {
            const alertDiv = document.getElementById('alert');
            const alertMessage = document.getElementById('alertMessage');
            
            alertMessage.textContent = message;
            alertDiv.className = `alert alert-${type}`;
            alertDiv.style.display = 'block';
            
            setTimeout(() => {
                alertDiv.style.display = 'none';
            }, 5000);
        }
        
        function showLoading(show) {
            const loading = document.getElementById('loading');
            const analyzeBtn = document.getElementById('analyzeBtn');
            
            if (show) {
                loading.style.display = 'block';
                analyzeBtn.disabled = true;
                analyzeBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Analyzing...';
                document.getElementById('resultCard').style.display = 'none';
            } else {
                loading.style.display = 'none';
                analyzeBtn.disabled = false;
                analyzeBtn.innerHTML = '<i class="fas fa-search me-2"></i>Analyze Transaction';
            }
        }
        
        // Auto-analyze if preset amount
        if (presetAmount) {
            setTimeout(() => {
                document.getElementById('analyzeForm').dispatchEvent(new Event('submit'));
            }, 500);
        }
    </script>
</body>
</html>
