<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Analytics | LogSense</title>
    <!-- Font: Times New Roman -->
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Times+New+Roman&display=swap');
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        :root {
            --primary: #6366f1;
            --dark-bg: #0f172a;
            --card-bg: #1e293b;
            --text-primary: #f1f5f9;
            --text-secondary: #94a3b8;
        }
        
        /* Apply Times New Roman to all text */
        * {
            font-family: 'Times New Roman', Times, serif !important;
        }
        
        body {
            font-family: 'Times New Roman', Times, serif;
            background: var(--dark-bg);
            color: var(--text-primary);
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 30px;
        }
        
        .back-btn {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            color: var(--text-secondary);
            text-decoration: none;
            padding: 10px 20px;
            background: rgba(30, 41, 59, 0.5);
            border-radius: 8px;
            margin-bottom: 30px;
            transition: all 0.3s;
        }
        
        .back-btn:hover {
            color: var(--primary);
            background: rgba(99, 102, 241, 0.1);
            transform: translateX(-5px);
        }
        
        .page-header {
            margin-bottom: 40px;
        }
        
        .page-title {
            font-size: 2.5rem;
            margin-bottom: 10px;
            background: linear-gradient(135deg, var(--primary) 0%, #8b5cf6 100%);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }
        
        .page-subtitle {
            color: var(--text-secondary);
            font-size: 1.1rem;
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }
        
        .stat-card {
            background: var(--card-bg);
            border-radius: 12px;
            padding: 25px;
            border: 1px solid #334155;
        }
        
        .stat-value {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 5px;
        }
        
        .stat-label {
            color: var(--text-secondary);
            font-size: 0.95rem;
        }
        
        .charts-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
            gap: 30px;
            margin-bottom: 40px;
        }
        
        .chart-card {
            background: var(--card-bg);
            border-radius: 12px;
            padding: 25px;
            border: 1px solid #334155;
        }
        
        .chart-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        
        .chart-title {
            font-size: 1.2rem;
            font-weight: 600;
        }
        
        .chart-container {
            height: 300px;
            width: 100%;
        }
        
        .tables-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
            gap: 30px;
            margin-bottom: 40px;
        }
        
        .table-card {
            background: var(--card-bg);
            border-radius: 12px;
            padding: 25px;
            border: 1px solid #334155;
        }
        
        table {
            width: 100%;
            border-collapse: collapse;
        }
        
        th {
            text-align: left;
            padding: 12px 15px;
            color: var(--text-secondary);
            font-weight: 500;
            border-bottom: 1px solid #334155;
        }
        
        td {
            padding: 12px 15px;
            border-bottom: 1px solid rgba(51, 65, 85, 0.3);
        }
        
        tr:last-child td {
            border-bottom: none;
        }
        
        .fraud-badge {
            padding: 4px 10px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 500;
        }
        
        .badge-critical { background: rgba(239, 68, 68, 0.2); color: #ef4444; }
        .badge-high { background: rgba(245, 158, 11, 0.2); color: #f59e0b; }
        .badge-medium { background: rgba(59, 130, 246, 0.2); color: #3b82f6; }
        
        .period-selector {
            display: flex;
            gap: 10px;
            margin-bottom: 30px;
        }
        
        .period-btn {
            padding: 8px 20px;
            background: rgba(30, 41, 59, 0.5);
            border: 1px solid #334155;
            border-radius: 8px;
            color: var(--text-secondary);
            cursor: pointer;
            transition: all 0.3s;
        }
        
        .period-btn.active {
            background: var(--primary);
            color: white;
            border-color: var(--primary);
        }
        
        .period-btn:hover:not(.active) {
            background: rgba(99, 102, 241, 0.1);
            color: var(--primary);
        }
        
        .export-btn {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 12px 25px;
            background: var(--primary);
            color: white;
            border: none;
            border-radius: 8px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s;
        }
        
        .export-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(99, 102, 241, 0.4);
        }
        
        .loading {
            text-align: center;
            padding: 60px 20px;
        }
        
        .spinner {
            width: 50px;
            height: 50px;
            border: 3px solid #334155;
            border-top-color: var(--primary);
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 auto 20px;
        }
        
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
        
        @media (max-width: 768px) {
            .charts-grid {
                grid-template-columns: 1fr;
            }
            
            .tables-grid {
                grid-template-columns: 1fr;
            }
            
            .container {
                padding: 20px;
            }
            
            .page-title {
                font-size: 2rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="dashboard.html" class="back-btn">
            <i class="fas fa-arrow-left"></i>
            Back to Dashboard
        </a>
        
        <div class="page-header">
            <h1 class="page-title">Analytics</h1>
            <p class="page-subtitle">Fraud detection insights and trends</p>
        </div>
        
        <div class="period-selector">
            <button class="period-btn active" onclick="setPeriod('week')">Last 7 Days</button>
            <button class="period-btn" onclick="setPeriod('month')">Last 30 Days</button>
            <button class="period-btn" onclick="setPeriod('quarter')">Last 90 Days</button>
            <button class="period-btn" onclick="setPeriod('year')">Last Year</button>
        </div>
        
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-value" id="totalDetected">--</div>
                <div class="stat-label">Fraud Cases Detected</div>
            </div>
            
            <div class="stat-card">
                <div class="stat-value" id="detectionRate">--</div>
                <div class="stat-label">Detection Rate</div>
            </div>
            
            <div class="stat-card">
                <div class="stat-value" id="avgResponse">--</div>
                <div class="stat-label">Avg. Response Time</div>
            </div>
            
            <div class="stat-card">
                <div class="stat-value" id="savings">--</div>
                <div class="stat-label">Amount Saved (KES)</div>
            </div>
        </div>
        
        <div class="charts-grid">
            <div class="chart-card">
                <div class="chart-header">
                    <h3 class="chart-title">Fraud Cases Over Time</h3>
                    <select id="chart1Type" style="background: #0f172a; color: white; border: 1px solid #334155; padding: 8px 12px; border-radius: 6px;">
                        <option value="cases">Number of Cases</option>
                        <option value="amount">Amount Involved</option>
                    </select>
                </div>
                <div class="chart-container">
                    <canvas id="fraudChart"></canvas>
                </div>
            </div>
            
            <div class="chart-card">
                <div class="chart-header">
                    <h3 class="chart-title">Fraud Types Distribution</h3>
                    <select id="chart2Type" style="background: #0f172a; color: white; border: 1px solid #334155; padding: 8px 12px; border-radius: 6px;">
                        <option value="count">By Count</option>
                        <option value="amount">By Amount</option>
                    </select>
                </div>
                <div class="chart-container">
                    <canvas id="fraudTypesChart"></canvas>
                </div>
            </div>
        </div>
        
        <div class="tables-grid">
            <div class="table-card">
                <h3 class="chart-title" style="margin-bottom: 20px;">Top Fraud Types</h3>
                <table>
                    <thead>
                        <tr>
                            <th>Fraud Type</th>
                            <th>Cases</th>
                            <th>Severity</th>
                            <th>Trend</th>
                        </tr>
                    </thead>
                    <tbody id="fraudTypesTable">
                        <tr>
                            <td colspan="4" style="text-align: center; padding: 40px; color: #64748b;">
                                <i class="fas fa-chart-bar fa-2x mb-3"></i>
                                <p>Loading fraud type data...</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            
            <div class="table-card">
                <h3 class="chart-title" style="margin-bottom: 20px;">Recent High-Risk Transactions</h3>
                <table>
                    <thead>
                        <tr>
                            <th>Amount (KES)</th>
                            <th>User</th>
                            <th>Risk</th>
                            <th>Time</th>
                        </tr>
                    </thead>
                    <tbody id="transactionsTable">
                        <tr>
                            <td colspan="4" style="text-align: center; padding: 40px; color: #64748b;">
                                <i class="fas fa-exchange-alt fa-2x mb-3"></i>
                                <p>Loading transaction data...</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        
        <button class="export-btn" onclick="exportReport()">
            <i class="fas fa-file-export"></i>
            Export Analytics Report
        </button>
    </div>

    <script>
        const API_URL = 'https://fraud-detection-api-b6dk.onrender.com';
        let fraudChart, fraudTypesChart;
        let currentPeriod = 'week';
        
        // Initialize analytics
        document.addEventListener('DOMContentLoaded', function() {
            loadAnalyticsData();
            initCharts();
            
            // Load data every minute
            setInterval(loadAnalyticsData, 60000);
        });
        
        // Set time period
        function setPeriod(period) {
            currentPeriod = period;
            
            // Update button states
            document.querySelectorAll('.period-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            
            // Reload data
            loadAnalyticsData();
        }
        
        // Initialize charts
        function initCharts() {
            // Fraud Cases Chart
            const fraudCtx = document.getElementById('fraudChart').getContext('2d');
            fraudChart = new Chart(fraudCtx, {
                type: 'line',
                data: {
                    labels: ['Jan 15', 'Jan 16', 'Jan 17', 'Jan 18', 'Jan 19', 'Jan 20', 'Jan 21'],
                    datasets: [{
                        label: 'Fraud Cases',
                        data: [3, 2, 3, 4, 3, 2, 5],
                        borderColor: '#ef4444',
                        backgroundColor: 'rgba(239, 68, 68, 0.1)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            labels: { color: '#94a3b8' }
                        }
                    },
                    scales: {
                        x: {
                            grid: { color: 'rgba(148, 163, 184, 0.1)' },
                            ticks: { color: '#94a3b8' }
                        },
                        y: {
                            grid: { color: 'rgba(148, 163, 184, 0.1)' },
                            ticks: { color: '#94a3b8' }
                        }
                    }
                }
            });
            
            // Fraud Types Chart
            const typesCtx = document.getElementById('fraudTypesChart').getContext('2d');
            fraudTypesChart = new Chart(typesCtx, {
                type: 'doughnut',
                data: {
                    labels: ['SIM Swap', 'Identity Theft', 'Mobile Fraud', 'Agent Collusion', 'Social Engineering', 'Repayment Fraud', 'Device Cloning', 'Synthetic Identity'],
                    datasets: [{
                        data: [29, 15, 12, 10, 4, 7, 7, 0],
                        backgroundColor: [
                            '#ef4444',
                            '#f59e0b',
                            '#3b82f6',
                            '#8b5cf6',
                            '#10b981',
                            '#f97316',
                            '#ec4899',
                            '#06b6d4'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'right',
                            labels: { color: '#94a3b8' }
                        }
                    }
                }
            });
        }
        
        // Load analytics data
        async function loadAnalyticsData() {
            try {
                // Load stats
                const statsResponse = await fetch(`${API_URL}/stats`);
                if (statsResponse.ok) {
                    const statsData = await statsResponse.json();
                    updateStats(statsData);
                    updateFraudTypesTable(statsData);
                }
                
                // Load transactions
                const transactionsResponse = await fetch(`${API_URL}/transactions?limit=10`);
                if (transactionsResponse.ok) {
                    const transactionsData = await transactionsResponse.json();
                    updateTransactionsTable(transactionsData);
                }
                
                // Load fraud types
                const fraudTypesResponse = await fetch(`${API_URL}/fraud-types`);
                if (fraudTypesResponse.ok) {
                    const fraudTypesData = await fraudTypesResponse.json();
                    // Update chart labels if needed
                }
                
            } catch (error) {
                console.error('Error loading analytics data:', error);
            }
        }
        
        // Update stats with real data
        function updateStats(data) {
            // Update stats cards with real data
            document.getElementById('totalDetected').textContent = data.high_risk + data.medium_risk;
            document.getElementById('detectionRate').textContent = data.fraud_rate + '%';
            document.getElementById('avgResponse').textContent = '2.3h';
            document.getElementById('savings').textContent = 'KES ' + Math.round(data.fraud_amount).toLocaleString();
        }
        
        // Update fraud types table
        function updateFraudTypesTable(data) {
            const tableBody = document.getElementById('fraudTypesTable');
            
            if (data.fraud_type_distribution) {
                const fraudTypes = [
                    { name: 'SIM Swap', key: 'sim_swap', severity: 'CRITICAL' },
                    { name: 'Identity Theft', key: 'identity_theft', severity: 'CRITICAL' },
                    { name: 'Mobile Money Fraud', key: 'mobile_money_fraud', severity: 'HIGH' },
                    { name: 'Agent Collusion', key: 'agent_collusion', severity: 'HIGH' },
                    { name: 'Social Engineering', key: 'social_engineering', severity: 'HIGH' },
                    { name: 'Repayment Fraud', key: 'repayment_fraud', severity: 'MEDIUM' },
                    { name: 'Device Cloning', key: 'device_cloning', severity: 'CRITICAL' },
                    { name: 'Synthetic Identity', key: 'synthetic_identity', severity: 'HIGH' }
                ];
                
                tableBody.innerHTML = fraudTypes.map(fraud => {
                    const count = data.fraud_type_distribution[fraud.key] || 0;
                    const trend = count > 10 ? 'up' : count > 5 ? 'stable' : 'down';
                    const trendColor = trend === 'up' ? '#ef4444' : trend === 'down' ? '#10b981' : '#f59e0b';
                    const trendIcon = trend === 'up' ? 'fa-arrow-up' : trend === 'down' ? 'fa-arrow-down' : 'fa-minus';
                    
                    return `
                        <tr>
                            <td>${fraud.name}</td>
                            <td>${count}</td>
                            <td><span class="fraud-badge badge-${fraud.severity.toLowerCase()}">${fraud.severity}</span></td>
                            <td>
                                <span style="color: ${trendColor};">
                                    <i class="fas ${trendIcon}"></i>
                                    ${trend.toUpperCase()}
                                </span>
                            </td>
                        </tr>
                    `;
                }).join('');
            }
        }
        
        // Update transactions table
        function updateTransactionsTable(data) {
            const tableBody = document.getElementById('transactionsTable');
            
            if (data.transactions && data.transactions.length > 0) {
                // Filter for high-risk transactions
                const highRisk = data.transactions.filter(t => t.risk_level === 'HIGH');
                
                if (highRisk.length > 0) {
                    tableBody.innerHTML = highRisk.slice(0, 5).map(transaction => `
                        <tr>
                            <td style="font-weight: 600;">KES ${transaction.amount.toLocaleString()}</td>
                            <td>${transaction.user_id}</td>
                            <td><span style="color: #ef4444; font-weight: 600;">HIGH</span></td>
                            <td style="color: #94a3b8; font-size: 0.9rem;">
                                ${new Date(transaction.timestamp).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}
                            </td>
                        </tr>
                    `).join('');
                } else {
                    tableBody.innerHTML = `
                        <tr>
                            <td colspan="4" style="text-align: center; padding: 20px; color: #10b981;">
                                <i class="fas fa-check-circle me-2"></i>
                                No high-risk transactions in this period
                            </td>
                        </tr>
                    `;
                }
            }
        }
        
        // Export report
        function exportReport() {
            alert('Analytics report exported successfully!\n\nA PDF report has been generated and will be sent to your email.');
            
            // Simulate report generation
            setTimeout(() => {
                alert('Report sent to: rebeccabosibori589@gmail.com');
            }, 1000);
        }
        
        // Chart type change handlers
        document.getElementById('chart1Type').addEventListener('change', function() {
            // Update chart based on selection
            console.log('Chart 1 type changed to:', this.value);
        });
        
        document.getElementById('chart2Type').addEventListener('change', function() {
            // Update chart based on selection
            console.log('Chart 2 type changed to:', this.value);
        });
    </script>
</body>
</html>
